# Example secrets file for Streamlit Cloud
# Copy this to your Streamlit Cloud app settings -> Secrets

# Choose your LLM provider
LLM_PROVIDER = "gemini"

# If using OpenAI (costs money)
OPENAI_API_KEY = "your-openai-key-here"

# If using Gemini (FREE!) - Get key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY = "your-gemini-key-here"

# Model settings
MODEL_NAME = "gemini-2.5-flash"
TEMPERATURE = "0.7"
MAX_TOKENS = "2000"
